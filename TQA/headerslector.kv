<HeaderListItem>:
    on_press: app.root.select_header(self.text)

<HeaderSelector>:
    orientation: "vertical"
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Generate extracted.xlsx with selected headers"
            on_press: root.create_extracted_spreadsheet()
    RecycleView:
        id: header_list
        viewclass: 'HeaderListItem'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
